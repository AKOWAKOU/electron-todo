{
  "name": "electron-todo-app",
  "version": "1.0.0",
  "main": "main.js",
  "author": {
    "name": "JDA DEV",
    "email": "akowakou251@gmail.com"
  },
  "scripts": {
    "start": "concurrently \"npm run start-react\" \"npm run start-electron\"",
    "start-react": "npm start --prefix client",
    "start-electron": "wait-on http://localhost:3000 && electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "electron-builder"
  },
  "build": {
    "productName": "Electron TODO App",
    "appId": "com.example.electron-todo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "client/**"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "publisherName": "JDA DEV"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "JDA DEV <akowakou251@gmail.com>",
      "category": "Utility"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.5.0",
    "concurrently": "^6.5.1",
    "electron": "^12.0.0",
    "electron-builder": "^22.14.13",
    "wait-on": "^5.3.0"
  }
}
